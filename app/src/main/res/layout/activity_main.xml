<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="Zaawansowany"
                android:id="@+id/btnAdvanced"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:onClick="OpenAdvanced" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="Podstawowy"
                android:id="@+id/btnBasic"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:onClick="OpenBasic" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="O aplikacji"
                android:id="@+id/btnAbout"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:onClick="OpenAbout" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="WyjÅ›cie"
                android:id="@+id/btnExit"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:onClick="CloseApplication" />
        </TableRow>

    </LinearLayout>
</RelativeLayout>
