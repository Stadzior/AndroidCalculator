<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity"
    android:background="#888888">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="@string/btnAdvancedText"
            android:id="@+id/btnAdvanced"
            android:layout_gravity="center"
            android:onClick="OpenAdvanced"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="@string/btnBasicText"
            android:id="@+id/btnBasic"
            android:layout_gravity="center"
            android:onClick="OpenBasic"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="@string/btnAboutText"
            android:id="@+id/btnAbout"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:onClick="OpenAbout"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="5dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="@string/btnExitText"
            android:id="@+id/btnExit"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:onClick="CloseApplication"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="5dp" />

    </GridLayout>
</RelativeLayout>
